    <ColorPicker @bind-Value="rgbColor" />
</div>
<div style="display: inline-flex; height: 100%; width: 100%">
    <div style="min-width: @($"{ColorPicker.Width}px")" />
    <div>
        <WorldGrid Width="30" Height="30" FillColor="rgbColor" />
    </div>
</div>

@code {
    private RgbColor rgbColor;
}